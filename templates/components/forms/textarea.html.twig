<div class="flex flex-col items-start justify-center gap-4 w-full">
    <label class="text-text/75 text-sm" for="{{ label|lower|replace({" " : "-"}) }}">{{ label }}</label>
    <textarea
           name="{{ tag ?? label|lower|replace({" " : "-"}) }}"
           id="{{ tag ?? label|lower|replace({" " : "-"}) }}"
           placeholder="{{ placeholder ?? "..." }}"
           class="w-full bg-neutral-900 px-6 py-4 rounded-sm outline-1 transition-all duration-75 outline-primary/20
            hover:bg-primary/10 focus:outline-primary text-sm"
    ></textarea>
</div>
